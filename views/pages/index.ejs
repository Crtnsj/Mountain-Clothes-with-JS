</head>
<body>
    <header>
        <h1>
                Mountain Clothes
        </h1>
        
        <nav class="nav">
            <img src="img/menuhamb.png" class="nav__menuhamb">   
            <a href="/" class="nav__logo nav__logo--marque"></a>
            <h2 class="nav__menuhamb">Bienvenue !</h2>
                <ul class="nav__ul">
                    <li class="navlink"><a href="/">Accueil</a></li>
                    <li class="navlink"><a href="html/Hommes.html">Hommes</a></li>
                    <li class="navlink"><a href="html/Femmes.html">Femmes</a></li>
                    <li class="navlink"><a href="html/Nouveautés.html">Nouveautés</a></li>
                    <li class="navlink"><a href="/panier">Panier</a></li>
                </ul>
        <a href="/connexion" class="nav__logo nav__logo--connexion"></a>
        </nav>
    </header>
    <main>
        <section class="mountains">
            <div class="illunouv">  
                <a href="html/Nouveautés.html" class="illunouv__but">Découvrir</a>
            </div>
        </section>
        <h2>Accueil</h2>

        <section class="meillvente">
            <h2 class="font1">Meilleures ventes</h2>
            <ul class="articles">
                <% for (let i = 0; i<products.length; i++) {%>
                    <!-- creation de la boucle qui affichera les articles de la table orders  -->
                <li class="card" id="<%=products[i].id%>">
                    <!-- l'atribution d'un id est important pour la redirection de la requête POST  -->
                    <img src="../img/<%=products[i].item_name%>.gif" class="illu_ventes">
                    <!-- recupération d'une illustration grace au nom du produit (l'illustration est nommée pareil)  -->
                    <h3><%=products[i].item_name%></h3>
                    <!-- recupération du nom du produit  -->
                    <p><%=products[i].price%>€</p>
                    <!-- recupération du prix  -->
                    <form action="/#<%=products[i].id%>" method="post">
                        <input type="hidden" name="idProduct" value="<%=products[i].id%>"/>
                        <input type="hidden" name="nameProduct" value="<%=products[i].item_name%>"/>
                        <input type="hidden" name="price" value="<%=products[i].price%>"/>
                        <input type="submit" value="Ajouter au panier" class="card__btn"/>
                    </form>
                    <!-- bouton qui permet d'ajouter l'article selectionné au panier, il récupere l'id de produit, le nom, le prix  -->
                    <!-- ce bouton renvoie au produit selectionner grace à l'id de la card définit au dessus  -->
                </li>
                <% } %>
            </ul>
        </section>
    
    </main>
    <footer>
        &copy; = Crtnsj
    </footer>
    
</body>
</html>